{
    "name": "Safe link",
    "description": "Extensão para verificar se uma url/link é seguro",
    "version": "0.1.1",
    "manifest_version": 3,
    "author": "Dev Alyson",
    "icons": { 
        "16": "Img/security.png",
        "48": "Img/security.png",
        "128": "Img/security.png" 
    },
    "host_permissions": [
        "*://*/*",
        "<all_urls>"
    ],
    "permissions": [
        "activeTab", 
        "scripting",
        "webRequest",
        "tabs",
        "clipboardWrite",
        "clipboardRead",
        "background"
    ],
    "action":{
        "default_popup": "../Views/index.html"
    }
}